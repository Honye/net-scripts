#!tag=GitHub

[Argument]
token = input, "Personal access token", tag = PAT, desc = Personal access token

[Rule]

[Rewrite]

[Script]
http-request ^https:\/\/github\.com\/([^/]+)\/([^/]+)\/tree\/([^/]+)\/(.+)\.zip$ script-path=https://raw.githubusercontent.com/Honye/net-scripts/refs/heads/main/dist/github-download.js, timeout=60, tag=GitHub Downloader, argument=[{token}]

[Mitm]
hostname = github.com
